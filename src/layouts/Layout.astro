---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<button id="sidebarToggle" class="sidebar-toggle" aria-label="Toggle sidebar">☰</button>
			<aside class="sidebar" id="sidebar">
				<nav>
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="about">About Me</a></li>
						<li><a href="research">Research</a></li>
						<li><a href="hobby">Hobby</a></li>
					</ul>
				</nav>
			</aside>
			<main class="content">
				<h1>{title}</h1>
				<slot />
			</main>
		</div>
		<footer>
			<p>© {new Date().getFullYear()} Nishizaki Haruhiko. All Rights Reserved.</p>
		</footer>
		<script>
			const sidebarToggle = document.getElementById('sidebarToggle');
			const sidebar = document.getElementById('sidebar');

			if (sidebarToggle && sidebar) {
				sidebarToggle.addEventListener('click', function() {
					sidebar.classList.toggle('active');
				});
			}
		</script>
	</body>
</html>

<style is:global>
	:root {
		--accent: 255, 255, 255;
		--accent-light: 0, 255, 255;
		--accent-dark: 0, 43, 255;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-dark)) 30%,
			rgb(200, 200, 200) 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		margin: 0;
		color: white;
	}
	.container {
		display: flex;
		flex-grow: 1;
	}
	.sidebar-toggle {
		display: block;
		background: none;
		border: none;
		color: white;
		font-size: 2rem;
		padding: 1rem;
		cursor: pointer;
	}
	.sidebar {
		width: 250px;
		background-color: #1a1d23;
		padding: 2rem;
		display: none;
		font-size: 1.5rem;
	}
	.sidebar.active {
		display: block;
	}
	@media (min-width: 768px) {
		.sidebar {
			display: block;
		}
		.sidebar-toggle {
			display: none;
		}
	}
	.sidebar nav ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.sidebar nav ul li {
		margin-bottom: 1rem;
	}
	.sidebar nav ul li a {
		color: var(--accent-light);
		text-decoration: none;
		font-weight: bold;
		transition: font-size 0.3s ease;
		font-size: 1.5rem;
	}
	.sidebar nav ul li a:hover {
		font-size: 1.7rem;
	}
	.content {
		flex-grow: 1;
		padding: 2rem;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	footer {
		width: 100%;
		height: 10px;
		color: #ffffff;
		text-align: center;
		padding: 1rem;
		border-top: 1px solid #ffffff;
	}
</style>
